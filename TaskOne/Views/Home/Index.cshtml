@model TaskOne.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Simple RSVP";
}

<h2>Simple RSVP</h2>
<hr />
<form asp-controller="Home" asp-action="RegisterUser" method="post">
    <div class="d-inline-block">
        <span style="display: flex"><strong>Name</strong><strong style="color: #FF0000">*</strong></span>
        <input id="fName" size="10" asp-for="FirstName" />
        <br />
        <label for="fName">First</label>
    </div>
    <div class="d-inline-block">
        <input id="lName" size="25" asp-for="LastName" />
        <br />
        <label for="lName">Last</label>
    </div>

    <div class="div-bg">
        <span style="display: flex"><strong>Are you able to attend?</strong><strong style="color: #FF0000">*</strong></span>
        <input id="yes" type="radio" name="option" value="Yes" asp-for="Option"/>
        <label for="yes">Yes</label>
        <br />
        <input id="no" type="radio" name="option" value="No" asp-for="Option" />
        <label for="no">No</label>
        <br />
        <input id="notSure" type="radio" name="option" value="Not Sure" checked="checked" asp-for="Option" />
        <label for="notSure">Not sure</label>
        <br />
    </div>
    <input class="btn-success" type="submit" value="Register"/>
</form>
